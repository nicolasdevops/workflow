# N8N Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_THIS_PASSWORD

# Supabase Configuration
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# You.com API (for Claude Opus)
YOUCOM_API_KEY=your_youcom_api_key
YOUCOM_AGENT_ID=your_agent_id_here

# Decodo Mobile Proxy Configuration (REQUIRED)
# Get credentials from: https://decodo.com/dashboard
PROXY_USERNAME=user-spmto59f4g
PROXY_PASSWORD=your_password_here
PROXY_SERVER=gate.decodo.com
PROXY_PORT=7000
PROXY_COUNTRY=ca
PROXY_CITY=montreal
PROXY_SESSION_DURATION=60

# Timezone Configuration (MUST match proxy location)
TIMEZONE=America/Montreal

# Geolocation Configuration (Montreal coordinates - must match proxy city)
GEO_LATITUDE=45.5017
GEO_LONGITUDE=-73.5673

# Operation Window (24-hour format, Gaza time)
OPERATION_START_HOUR=8
OPERATION_END_HOUR=18

# Browser Configuration
# Railway env vars are always strings ("true" or "false")
# Set to "false" for local development to see browser window
HEADLESS=true

# Alert Configuration (optional)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Apify Configuration (REQUIRED for Instagram scraping)
# Get API token from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=your_apify_token_here

# Backblaze B2 Storage (REQUIRED for persistent media storage)
# Create public bucket and application key at: https://secure.backblaze.com/b2_buckets.htm
B2_KEY_ID=your_key_id_here
B2_APPLICATION_KEY=your_application_key_here
B2_BUCKET_NAME=your_bucket_name
B2_REGION=eu-central-003
